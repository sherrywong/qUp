<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal" >

    <!-- Horizontal divider to apps -->

   <LinearLayout
       android:id="@+id/business_layout_2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/business_layout_1"
       android:layout_alignRight="@+id/business_layout_1"
       android:layout_below="@+id/business_layout_1"
       android:background="@android:color/transparent"
       android:gravity="center_horizontal"
       android:layout_marginTop="5sp"
       android:orientation="vertical" >

        <TextView
            android:id="@+id/business_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#404040"
            android:textSize="20dp" />
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:background="#3399ff"
            android:orientation="horizontal" >
        </LinearLayout>
        <TextView
            android:id="@+id/business_time_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#686868"
            android:textSize="15dp" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/business_layout_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/business_name_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Business"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#00184c"
            android:textSize="36dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:background="#3399ff"
            android:orientation="horizontal" >
        </LinearLayout>

        <TextView
            android:id="@+id/business_time_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="30dp" android:textColor="@android:color/secondary_text_light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/business_layout_2"
        android:layout_alignRight="@+id/business_layout_2"
        android:layout_below="@+id/business_layout_2"
        android:layout_marginTop="18dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/app_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#0066CC"
            android:text="Tag-In"
            android:textColor="#ffffff" android:layout_marginTop="46sp"/>

        <Button
            android:id="@+id/app_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF9933"
            android:text="Reserve"
            android:textColor="#ffffff" android:layout_marginTop="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/business_layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/business_layout_0"
        android:layout_alignRight="@+id/business_layout_0"
        android:layout_below="@+id/business_layout_0"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/business_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#404040"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:background="#3399ff"
            android:orientation="horizontal" >
        </LinearLayout>

        <TextView
            android:id="@+id/business_time_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#686868"
            android:textSize="15dp" />
    </LinearLayout>
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" android:layout_above="@+id/business_layout_2"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>